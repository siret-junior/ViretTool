<UserControl x:Class="ViretTool.PresentationLayer.Controls.Query.Views.QueryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViretTool.PresentationLayer.Controls.Query.Views"
             xmlns:viewModels="clr-namespace:ViretTool.PresentationLayer.Controls.Query.ViewModels"
             xmlns:common="clr-namespace:ViretTool.PresentationLayer.Controls.Common"
             xmlns:properties="clr-namespace:ViretTool.Resources.Properties;assembly=ViretTool.Resources"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:QueryViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Filter -->
        <common:FilterControl Grid.Row="0" FilterName="{x:Static properties:Resources.BwFilterText}" cal:Message.Attach="[Event FilterChangedEvent] = [Action BwFilterChanged($eventArgs)]"/>
        <common:FilterControl Grid.Row="1" FilterName="{x:Static properties:Resources.PercentageBlackFilterText}" cal:Message.Attach="[Event FilterChangedEvent] = [Action PercentageBlackFilterChanged($eventArgs)]"/>

        <!-- Keyword -->
        <common:ModelControl Grid.Row="2" ModelName="{x:Static properties:Resources.KeywordModelName}"/>
        <common:KeywordSearchControl Grid.Row="3" />

        <!-- Colors -->
        <common:ModelControl Grid.Row="4" ModelName="{x:Static properties:Resources.SketchModelName}"/>
        <common:SketchCanvas Grid.Row="5" />

        <!-- Semantic examples -->
        <common:ModelControl Grid.Row="6" ModelName="{x:Static properties:Resources.SemanticModelName}"/>
        <!-- TODO možná použít display control? -->
    </Grid>
</UserControl>
